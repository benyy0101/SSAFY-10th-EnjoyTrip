<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrip.board.model.dao.BoardDao">
    
    <insert id="writeArticle"        parameterType="BoardDto">
        insert into board(articleNo, userId, subject, content, hit) 
        values(#{articleNo},#{userId},#{subject}, #{content}, #{hit})
    </insert>
    
    <select id="getArticle" parameterType="int" resultType="BoardDto">
    	select *
    	from board
    	where articleNo = #{articleNo}
    </select>
    
    <select id="allArticle" parameterType="Map" resultType="BoardDto">
    	select *
    	from board
    	order by articleNo
    </select>

</mapper>